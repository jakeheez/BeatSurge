<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<link rel="shortcut icon" href="~/pics/favicon.ico" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body class="body-full">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Heaser", "Index", "BeatPage", new { producerId = 1 }, new { @class = "navbar-brand" })
				@Html.ActionLink("Summit", "Index", "BeatPage", new { producerId = 2 }, new { @class = "navbar-brand" })
				@Html.ActionLink("Yousef", "Index", "BeatPage", new { producerId = 3 }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr class="footer-hr" />
        <footer>
            <p class="footer-right">&copy; @DateTime.Now.Year - Heaserbeats</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/beatPage.js"></script>
	<script type="text/javascript">
		updateViewOnLoad('@Html.Raw(Json.Encode(Model))');
	</script>
</body>
</html>