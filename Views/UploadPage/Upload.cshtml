
@{
    ViewBag.Title = "Upload";
}

<div class="content">
	<form class="form-section" action="~/UploadFireBeats/UploadBeat" enctype="multipart/form-data" method="post">
		<fieldset>
			<legend>Upload Beat</legend>
			<div>
				<label for="Title">Title: </label>
				<input type="text" name="Title" value="" />
			</div>
			<div>
				<label for="LeasePrice">Lease Price: $</label>
				<input type="text" name="LeasePrice" value="" />
			</div>
			<div>
				<label for="BuyPrice">Buy Price: $</label>
				<input type="text" name="BuyPrice" value="" />
			</div>
			<div>
				<label for="Beat">Beat (.mp3 only, max 25mb): </label>
				<input type="file" name="Beat" />
			</div>
			<div>
				<label for="Password">Password: </label>
				<input type="password" name="Password" value="" />
			</div>
			<div>
				<label>&nbsp;</label>
				<input type="submit" value="Send Beat" />
			</div>
		</fieldset>
	</form>

	<form class="form-section" action="~/UploadFireBeats/UploadNews" enctype="multipart/form-data" method="post">
		<fieldset>
			<legend>Upload News Article</legend>
			<div>
				<label for="Title">Title: </label>
				<input class="form-textbox" type="text" name="Title" value="" />
			</div>
			<div>
				<label for="ArticleText">Article Text: </label>
				<textarea class="form-textarea" name="ArticleText" value=""></textarea>
			</div>
			<div>
				<label for="NewsPic">News Picture (.png only): </label>
				<input type="file" name="NewsPic" />
			</div>
			<div>
				<label for="Password">Password: </label>
				<input type="password" name="Password" value="" />
			</div>
			<div>
				<label>&nbsp;</label>
				<input type="submit" value="Send News" />
			</div>
		</fieldset>
	</form>
</div>
